<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:contentPadding="5dp"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/icontint"
        android:orientation="vertical"
        android:padding="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentPadding="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewEvento"
                android:layout_width="180dp"
                android:layout_height="270dp"
                app:cardBackgroundColor="#000000"
                app:cardCornerRadius="30dp"
                app:cardElevation="70dp"
                app:contentPadding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="166dp"
                    android:layout_height="255dp"
                    android:background="@color/icontint"
                    android:orientation="vertical"
                    app:contentPadding="10dp">

                    <ImageView
                        android:id="@+id/portadaEvent"
                        android:layout_width="164dp"
                        android:layout_height="161dp"
                        android:layout_marginRight="30dp"
                        android:background="@color/icontint"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/imagenes" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:background="#000000">

                        <TextView
                            android:id="@+id/creadorEvent"
                            android:layout_width="134dp"
                            android:layout_height="38dp"
                            android:layout_marginRight="30dp"
                            android:text="Titulo Evento"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tituloEvent"
                            android:layout_width="134dp"
                            android:layout_height="26dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="25dp"
                            android:text="Creador Evento"
                            android:textColor="#9C27B0"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/creadorEvent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </GridLayout>


</GridLayout>